<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="kr.ac.jejunu.jnu_tong.main.MainActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="296dp"
            android:background="@drawable/background_main"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="203dp"
                android:layout_marginEnd="19dp"
                android:layout_gravity="end"
                android:text="10월 17(화)"
                android:textSize="36sp"
                android:textColor="@color/navy"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="26dp"
                android:layout_gravity="end"
                android:text="종강까지 D-260"
                android:textSize="20sp"
                android:textColor="@color/navy"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="36dp"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="12dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingStart="13dp"
                android:text="시내버스"
                android:textColor="@color/white"
                android:background="@drawable/main_round_box_top"
                android:gravity="center_vertical"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/main_round_box_bottom"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="출발예정버스"
                    android:textColor="@color/navy"
                    android:gravity="center_vertical"
                    android:paddingStart="13dp"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:background="@color/gray"/>
                <LinearLayout
                    android:id="@+id/bus_come_in"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="13dp"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="12dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingStart="13dp"
                android:text="시내버스"
                android:textColor="@color/white"
                android:background="@drawable/main_round_box_top"
                android:gravity="center_vertical"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/main_round_box_bottom"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="출발예정버스"
                    android:textColor="@color/navy"
                    android:gravity="center_vertical"
                    android:paddingStart="13dp"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:background="@color/gray"/>

            </LinearLayout>
        </LinearLayout>

</LinearLayout>
